{
  "manifest_version": 2,
  "name": "AutoScroll",
  "version": "1.0",

  "description": "Auto scroll extension for what's App on FireFox",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.whatsapp.com/*"],
      "js": ["borderify.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Beastify",
    "default_popup": "popup/index.html"
  }
}
